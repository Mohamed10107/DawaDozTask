<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:attribute="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">

    <TextView
        android:id="@+id/bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:padding="16dp"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        attribute:curvature="50dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:src="@mipmap/contact_icon"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="@+id/bar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar" />

    <Button
        android:id="@+id/cairo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/button_background"
        android:minHeight="100dp"
        android:tag="@string/cairo"
        android:text="@string/cairo"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/alex"
        app:layout_constraintTop_toBottomOf="@+id/about" />

    <Button
        android:id="@+id/alex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/button_background"
        android:minHeight="100dp"
        android:tag="@string/alex"
        android:text="@string/alex"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/cairo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about" />

    <Button
        android:id="@+id/giza"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:minHeight="100dp"
        android:tag="@string/giza"
        android:text="@string/giza"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/cairo"
        app:layout_constraintRight_toRightOf="@+id/cairo"
        app:layout_constraintTop_toBottomOf="@+id/cairo" />

    <Button
        android:id="@+id/aswan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:minHeight="100dp"
        android:tag="@string/aswan"
        android:text="@string/aswan"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/alex"
        app:layout_constraintRight_toRightOf="@+id/alex"
        app:layout_constraintTop_toBottomOf="@+id/alex" />

    <Button
        android:id="@+id/luxor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:minHeight="100dp"
        android:tag="@string/luxor"
        android:text="@string/luxor"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/cairo"
        app:layout_constraintRight_toRightOf="@+id/cairo"
        app:layout_constraintTop_toBottomOf="@+id/giza" />

</android.support.constraint.ConstraintLayout>